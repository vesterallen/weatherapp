<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hari.weatherapp.CityFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/ButtonLabelSetCurrentCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonSetCurrentCity" />

        <TextView
            android:text="@string/LabelCityNotSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonSetCurrentCity"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp"
            android:id="@+id/textViewCurrentCityFragmentCity" />
    </RelativeLayout>
</FrameLayout>
